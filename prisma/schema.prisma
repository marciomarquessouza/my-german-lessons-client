// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model trails {
  id              String   @id @default(cuid())
  name            String
  slugName        String
  title           String
  lessonsQnt      Int      @default(0)
}

model lessons {
  id              String   @id @default(cuid())
  trailId         String   @default("")
  name            String
  slugName        String
  description     String
  doorTitle       String   @default("")
  challengesQnt   Int      @default(0)
  roomPosition    Int      @default(0)
  floorPosition   Int      @default(0)
}

model challenges {
  id              String   @id @default(cuid())
  lessonId        String
  sourceLanguage  String
  targetLanguage  String
  question        String
  answer          String
  tip             String
}

model stamps {
  id              String   @id @default(cuid())
  title           String
  description     String
  type            String
  class           String
}

model opponent {
  id              String   @id @default(cuid())
  name            String
}

model lessonStamps {
  id              String   @id @default(cuid())
  lessonId        String
  stampId         String
  price           Int      @default(0)
  penalty         Int      @default(0)
  quantity        Int      @default(0)
}

model rounds {
  id              String   @id @default(cuid())
  lessonId        String
  opponentId      String
  turns           Int
  challengesLimit Int      @default(0)
  extraQuestion   Int      @default(0)
  assistants      Int      @default(0)
}